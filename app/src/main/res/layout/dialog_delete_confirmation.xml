<!-- dialog_delete_confirmation.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textDeleteConfirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/alert_text"
        android:fontFamily="@font/nunito_black"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/recom_frag_button"
        android:text="Delete"
        android:fontFamily="@font/nunito_black"
        android:textColor="@color/white"
        app:cornerRadius="12dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/save_button"
        android:text="Cancel"
        android:fontFamily="@font/nunito_black"
        android:textColor="@color/white"
        app:cornerRadius="12dp"/>


</LinearLayout>
